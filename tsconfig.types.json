{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "composite": false,
    "noEmit": false,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*.{ts,tsx}", "src/types/**/*.d.ts"],
  "exclude": ["dist", "node_modules", ".storybook", "stories", "**/*.stories.*"]
}
